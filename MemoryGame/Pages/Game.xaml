<Page
	x:Class="MemoryGame.Pages.GamePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:MemoryGame.Pages"
	mc:Ignorable="d" 
	d:DesignHeight="1080"
	d:DesignWidth="1920"
	Title="Game"
>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

        <Button
            Style="{StaticResource SettingsButton}"
			Grid.Row="0"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			HorizontalAlignment="Right"
			Margin="3"
			Click="OpenSettings">
            <Image Source="../Assets/Images/Cogwheel.png"></Image>
        </Button>

        <StackPanel
			Name="CardGridEl"
			Grid.Row="1"
			Grid.Column="0"
			Grid.ColumnSpan="2"
            Width="812"
            Height="812"
            Orientation="Vertical"
			HorizontalAlignment="Center"
            VerticalAlignment="Center"
		/>

        <TextBlock Grid.Row="2" Grid.Column="0" Name="PlayerOneScoreText" Style="{StaticResource ScorePlayerName}" />
        <TextBlock Grid.Row="2" Grid.Column="1" Name="PlayerTwoScoreText" Style="{StaticResource ScorePlayerName}" />
    </Grid>
</Page>
