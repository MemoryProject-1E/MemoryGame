<Page
	x:Class="MemoryGame.Pages.Credits"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:MemoryGame.Pages"
	mc:Ignorable="d"
	d:DesignHeight="1080"
	d:DesignWidth="1920"
	Title="Credits"
>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Style="{StaticResource HeadingRow}" />
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Heading}">Credits</TextBlock>

		<StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
			<TextBlock Style="{StaticResource Credit}">Arvid</TextBlock>
            <TextBlock Style="{StaticResource Credit}">Gabriel</TextBlock>
            <TextBlock Style="{StaticResource Credit}">Maurits</TextBlock>
            <TextBlock Style="{StaticResource Credit}">Meerten</TextBlock>
            <TextBlock Style="{StaticResource Credit}">Leon</TextBlock>
			<Button Style="{StaticResource Button}" Width="616" Margin="0,90,0,0" Click="GoBack">Terug</Button>
		</StackPanel>
	</Grid>
</Page>
